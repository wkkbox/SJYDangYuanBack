<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- spring自动任务调度器配置 -->
    <!-- 定时任务配置 -->
    <!-- 要调用的工作类 -->
    <bean id="springQtzJob" class="com.telecom.jx.sjy.dangyuanback.quartz.MyQuartz"/>
    <bean id="springReQtzJob" class="com.telecom.jx.sjy.dangyuanback.quartz.MyQuartz2"/>
    <!-- 任务配置列表 -->
    <bean id="springQtzJobMethod"
          class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
        <!-- 调用的类 -->
        <property name="targetObject">
            <ref bean="springQtzJob"/>
        </property>
        <!-- 调用类中的方法 -->
        <property name="targetMethod">  <!-- 要执行的方法名称 -->
            <value>test</value>
        </property>
    </bean>
    <bean id="springReQtzJobMethod"
          class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
        <!-- 调用的类 -->
        <property name="targetObject">
            <ref bean="springReQtzJob"/>
        </property>
        <!-- 调用类中的方法 -->
        <property name="targetMethod">  <!-- 要执行的方法名称 -->
            <value>test</value>
        </property>
    </bean>

    <!-- ======================== 调度触发器 ======================== -->
    <!-- 触发器配置 时间指定 -->
    <bean id="cronTriggerFactoryBean"
          class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
        <property name="jobDetail" ref="springQtzJobMethod"/>
        <property name="cronExpression" value="0 27 10 ? * *"/>
    </bean>
    <bean id="reCronTriggerFactoryBean"
          class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
        <property name="jobDetail" ref="springReQtzJobMethod"/>
        <property name="cronExpression" value="0 27 10 ? * *"/>
    </bean>

    <!-- ======================== 调度工厂 ======================== -->
    <bean id="springJobSchedulerFactoryBean"
          class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
        <property name="triggers">
            <list>
                <!-- 触发器列表 -->
                <ref bean="cronTriggerFactoryBean"/>
                <ref bean="reCronTriggerFactoryBean"/>
            </list>
        </property>
    </bean>

</beans>